        <div>
        <label for="sport">Seleziona lo sport</label>
        <select name="sport" id="sport" onchange="mostraSport()">
            <option value="">-Sport-</option>
            <option value="basket">Basket</option>
            <option value="calcio">Calcio</option>
            <option value="tennis">Tennis</option>
        </select>
        <label for="data">Data </label>
        <input type="date" id="data" name="data">
        </div>
        <div id="formBasket" class="formSport hide">
            <div>
                <label for="minuti">Minuti giocati</label>
                <input type="number" id="minuti" name="minuti">
                <label for="punti_basket">Punti segnati</label>
                <input type="number" name="punti_basket" id="punti_basket">
                <label for="fg">FG</label>
                <input type="text" id="fg" name="fg" pattern="[0-9]{2}/[0-9]{2}" placeholder="#tiri realizzati/#tiri tentati">
                <label for="3fg">3FG</label>
                <input type="text" name="3fg" id="3fg" pattern="[0-9]{2}/[0-9]{2}" placeholder="#tiri da 3 realizzati/#tiri da 3 tentati">
                <label for="assist_basket">Assist</label>
                <input type="number" id="assist_basket" name="assist_basket">
